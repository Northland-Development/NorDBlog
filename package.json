{
    "scripts": {
        "installAPI": "cd api && npm install",
        "installClient": "cd client && npm install",
        "installAll": "concurrently --kill-others npm:installAPI npm:installClient",
        "runAPI": "cd api && npm run start",
        "runClient": "cd client && npm run start",
        "runAll": "concurrently npm:runAPI npm:runClient"
    },
    "dependencies": {
        "concurrently": "^5.3.0",
        "dotenv": "^8.2.0"
    }
}
